<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
       
        <form action="/auth/create_new" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <!-- div to show reCAPTCHA -->
          <div class="g-recaptcha mt-1" data-sitekey="6Lf4btUkAAAAAEWEHq-Zo7eq-o7YGlQHPK83r8o5"></div>
        
          <button type="submit" class="btn btn-primary btn-block mt-1">
            Register
          </button>
        </form>
    
        <span class="social-signup-btn mt-1">
          <a  class="btn btn-secondary btn-block mt-1" href="/auth/google"><i class="fa-brands fa-google fa-2x me-1"></i>Register With Google</a>  
        <p class="lead mt-1">Have An Account? <a href="/auth/login_page">Login</a></p>
        </span>
      </div>
    </div>
  </div>