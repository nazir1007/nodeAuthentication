<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center ">
         <h3>Verify it's you</h3>
             <form action="/auth/verify_user" method="POST">      
             <div class="email">
             <label for="email">Email Id : </label>
             <span><%= locals.user.email %></span>
             <input type="email" name="email" value="<%= locals.user.email %>" hidden>
           </div>
           <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
           </div>
           <button type="submit" class="btn btn-primary btn-block mt-1">Verify</button>
       </form>
       </div>
    </div>
</div>