<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Login</h1>
     
        <form action="/auth/create_session" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <!-- div to show reCAPTCHA -->   
          <div class="g-recaptcha mt-1" data-sitekey="6Lf4btUkAAAAAEWEHq-Zo7eq-o7YGlQHPK83r8o5" ></div>
         
          <button type="submit" class="btn btn-primary btn-block mt-1">Login</button>
        </form>
      
        <span class="social-signup-btn mt-1">
          <a  class="btn btn-secondary btn-block mt-1" href="/auth/google"><i class="fa-brands fa-google fa-2x me-1"></i>Login With Google</a>
          </span>
        <p class="lead">
          No Account? <a href="/auth/signup_page">Register</a>
        </p>
         <p>
             <a href="/auth/reset_pass_page"> Forgot Password?</a>
        </p>
      </div>
    </div>
  </div>